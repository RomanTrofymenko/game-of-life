{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/GameOfLife/GameOfLife.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test with coverage",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "--project",
                "${workspaceFolder}/GameOfLife.Test/GameOfLife.Test.csproj",
                "test",
                "--logger",
                "trx;LogFileName=C:/Users/roman/AppData/Local/Temp/test-explorer-VByFpe/Results.trx",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=./lcov.info"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}